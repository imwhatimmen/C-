/*Este programa sirve para leer por teclado 10 numeros enteros y devolver
el mayor*/
#include<iostream>

int main(){
    //definicion de variables
    int cont;
    int numero;
    int mayor;
    int salir;
    //bucle de tipo for cont=cont+1 es lo mismo que cont++
    //for(cont=10;cont>=0;cont--){....
    mayor=0;
    for(cont=1;cont<=10;cont=cont+1){
       std::cout<<"Dime un numero entero: ";
       std::cin>>numero;
       if(numero>mayor){
         mayor=numero;
       }   
             
    }
    
    std::cout<<"El mayor es: "<<mayor;
    std::cout<<"Toca cualquier tecla";
    std::cin>>salir;
    return 0;
}
