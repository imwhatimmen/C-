//Este programa trata sobre estructuras
#include<iostream>
using namespace std;

int main(){
    //declaro un nuevo tipo de dato (especial)
    struct persona {
       string nombre;
       int edad;
       char colorPelo; //Para poner nombre entero poner "string"  
    };
    int cont,salir;
    //Declaro una variable de tipo persona
    persona amigo[3];
    for(cont=0;cont<3;cont++){
       cout<<"DATOS AMIGO"<<cont<<endl;                       
       cout<<"Como se llama tu amigo?: ";
       cin>>amigo[cont].nombre;
       cout<<"Cuantos aÃ±os tiene?: ";
       cin>>amigo[cont].edad;
       cout<<"De que color tiene el pelo?; ";
       cin>>amigo[cont].colorPelo;     
    
    }
  
    cout<<"MIS AMIGOS SON: "<<endl;
    for(cont=0;cont<3;cont++){
       cout<<"Mi amig@ "<<amigo[cont].nombre<<" tiene "<<amigo[cont].edad<<" y su pelo es de color "<<amigo[cont].colorPelo<<endl;                           
    }
     cout<<"Toca cualquier tecla para acabar";
     cin>>salir;
     
}                 
    
