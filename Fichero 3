//Leer lineas
#include<iostream>
#include<fstream>

using namespace std;

int main (){
    ifstream fichero("MiFichero.txt");
    string mensaje;
    int salir;
    cout<<"El texto dice: "<<endl;
    for(int nlinea=1;nlinea<=4;nlinea++){
       getline(fichero,mensaje);
       cout<<mensaje;
       cout<<endl;
    }
    cin>>salir;
    
    }
