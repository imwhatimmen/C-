//Programas sobre manejo de memoria
//Vamos a declarar 2 variables, a y b
#include<stdio.h>

int main(){
    char palabra1[5];
    char palabra2[5];
    int salir;
    printf("\nDime algo: ");
    scanf ("%s", palabra1);
    printf("\nDime algo mas: ");
    scanf("%s", palabra2);
    printf("direccion palabra1 = %x",palabra1); //Los nombres de vectores y arrays son direcciones
    printf("palabra1 = %c\n",*(palabra1+1));//los punteros no guardan nada en concreto si no la posici√≥n de memoria de otra direccion
    printf("direccion palabra2 = %x",palabra2);
    printf("palabra2 = %c",*(palabra2+1));
    scanf("%i",&salir);
}

